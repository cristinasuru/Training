{% extends 'base.html.twig' %}

{% set pageTitle = movie.id ? 'Edit : ' ~ movie.title : 'New Movie' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>{{ pageTitle }}</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">{{ movie.id ? 'Edit' : 'Send' }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}