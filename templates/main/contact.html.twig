{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Contact</h1>


        {% for message in app.flashes('info') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Send</button>
        {{ form_end(form) }}
    </div>
{% endblock %}